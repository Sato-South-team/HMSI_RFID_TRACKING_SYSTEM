                            <RowDefinition Height="35"/>
                            <RowDefinition Height="35"/>
                            <RowDefinition Height="35"/>
                            <RowDefinition Height="95"/>
                            <RowDefinition Height="95"/>
                            <RowDefinition Height="35"/>
                        </Grid.RowDefinitions>
                        <ComboBox Grid.Column="1" x:Name="cmbMachine" SelectionChanged="CmbMachine_SelectionChanged" Margin="2,0,0,37" Grid.RowSpan="2" Height="Auto" />
