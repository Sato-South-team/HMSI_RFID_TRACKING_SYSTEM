                            <ComboBoxItem>CHILLER CHECK SHEET</ComboBoxItem>
                            <ComboBoxItem>PARAMETER CHECK SHEET</ComboBoxItem>
                            <ComboBoxItem>QUALITY CHECK SHEET</ComboBoxItem>
